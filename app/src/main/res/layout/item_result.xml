<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="result"
            type="com.afterapps.heimdall.domain.Result" />

        <variable
            name="resultListener"
            type="com.afterapps.heimdall.ui.search.ResultListener" />

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/simple_padding_medium"
        android:layout_marginTop="@dimen/simple_padding_small"
        android:layout_marginEnd="@dimen/simple_padding_medium"
        android:layout_marginBottom="@dimen/simple_padding_small"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:onClick="@{()-> resultListener.onClick(result)}"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="@dimen/card_elevation">

        <ImageView
            android:id="@+id/item_result_image_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/result_item_height"
            android:scaleType="center"
            app:resultImageUrl="@{result.imageUrl}"
            tools:ignore="ContentDescription"
            tools:src="@drawable/ic_image_placeholder" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_image_view_tint"
            android:orientation="vertical"
            android:padding="@dimen/simple_padding_large">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@{result.description}"
                android:textColor="@color/colorTextPrimaryDark"
                android:textSize="@dimen/text_size_primary"
                tools:text="@string/placeholder" />

        </FrameLayout>

    </androidx.cardview.widget.CardView>

</layout>